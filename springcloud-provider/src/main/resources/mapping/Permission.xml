<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qiqi.springcloudprovider.repository.mapper.PermissionMapper">
    <resultMap id="BaseResultMap" type="com.qiqi.springcloudprovider.repository.domain.Permission">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="permission" jdbcType="VARCHAR" property="permission"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, permission
    </sql>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from permissions
        where id = #{id,jdbcType=BIGINT}
    </select>

    <select id="selectByRoleId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from permissions p, role_permission rp
        where p.id = rp.permission_id
        and role_id = #{roleId,jdbcType=BIGINT}
    </select>

</mapper>